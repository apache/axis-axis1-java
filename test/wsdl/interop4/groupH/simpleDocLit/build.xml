<project name="Round4" default="compile">
    <property name="axis.home" location="../../../../.." />
    <property name="componentName" value="test/wsdl/interop4/groupH/simpleDocLit" />
    &properties;
    &paths;
    &taskdefs;
    &taskdefs_post_compile;
    &targets;
    <property name="root.dir" value="../../../../.."/>
    <target name="clean">
        <echo message="Removing ${build.dir}/classes/${componentName} and ${build.dir}/work/${componentName}" />
        <delete dir="${build.dir}/classes/${componentName}"/>
        <delete dir="${build.dir}/work/${componentName}"/>
    </target>
    
    <target name="compile" depends="setenv">
        <property name="testname" value="simpleDocLit"/>
        
        <!-- generate skeletons -->
        <wsdl2java url="${axis.home}/test/wsdl/interop4/groupH/simpleDocLit/simple-doc-literal.wsdl"
            output="${root.dir}/build/work" skeletonDeploy="no"
            serverSide="yes">
            <mapping namespace="http://soapinterop.org/wsdl" package="test.wsdl.interop4.groupH.simpleDocLit"/>
            <mapping namespace="http://soapinterop.org/types" package="test.wsdl.interop4.groupH.simpleDocLit"/>
            <mapping namespace="http://soapinterop.org/types/part" package="test.wsdl.interop4.groupH.simpleDocLit"/>
            <mapping namespace="http://soapinterop.org/types/requestresponse" package="test.wsdl.interop4.groupH.simpleDocLit"/>
        </wsdl2java>
        
        <mkdir dir="${build.dest}"/>
        
        <copy file="SimpleDocLitBindingImpl.java" overwrite="true"
            todir="${root.dir}/build/work/test/wsdl/interop4/groupH/${testname}"/>
        <copy file="SimpleDocLitServiceTestCase.java" overwrite="true"
            todir="${root.dir}/build/work/test/wsdl/interop4/groupH/${testname}"/>
        
        <!-- compile the code -->
        <javac srcdir="${build.dir}/work"
            destdir="${build.dest}" debug="on" nowarn="${nowarn}">
            <classpath refid="classpath" />
            <include name="test/wsdl/interop4/groupH/simpleDocLit/*.java" />
        </javac>
    </target>
    
    <target name="run" >
        <antcall target="execute-Component" />
    </target>
</project>
